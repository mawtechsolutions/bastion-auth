{
  "name": "@bastionauth/server",
  "version": "0.1.0",
  "description": "BastionAuth API Server",
  "author": "BastionAuth <hello@bastionauth.dev>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "tsx src/prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@bastionauth/core": "workspace:*",
    "dotenv": "^17.2.3",
    "@fastify/cookie": "^11.0.2",
    "fastify-plugin": "^5.1.0",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@node-rs/argon2": "^2.0.2",
    "@prisma/client": "^7.2.0",
    "@simplewebauthn/server": "^13.2.2",
    "fastify": "^5.6.2",
    "ioredis": "^5.3.2",
    "jose": "^6.1.3",
    "nanoid": "^5.0.4",
    "otpauth": "^9.2.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "qrcode": "^1.5.3",
    "resend": "^6.6.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/qrcode": "^1.5.5",
    "prisma": "^5.9.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}

